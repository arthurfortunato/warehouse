{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ]
  }
}